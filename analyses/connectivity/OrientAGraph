https://speciationgenomics.github.io/Treemix/

plink --vcf /home/goliath/DiscoC/aphanius/copy_data/filtered/haplotypecaller/genotypecaller/filtervcf/1.all_aphanius/dataset1_rmrep_gatk_nomissing.vcf.gz --allow-extra-chr --double-id --make-bed --out aph_iberus_nomissing

conda activate python2
We need a cluster file where each line looks like this & with no header
CN21582	CN21582	ZOO

vcf2treemix.sh /home/goliath/DiscoC/aphanius/copy_data/filtered/haplotypecaller/genotypecaller/filtervcf/1.all_aphanius/dataset1_rmrep_gatk_nomissing.vcf.gz all_aphanius.clu

awk -F"\t" '{
split($2,chr,":")
$1="1"
$2="1:"chr[2]
print $0
}' *.map > better.map
mv better.map dataset1_rmrep_gatk_nomissing.map


# Next, we convert the .vcf into a stratified frq file, also creating other necessary files:
#this needs to be plink 1.9!!
/home/goliath/miniconda3/bin/plink --bfile dataset1_rmrep_gatk_nomissing --freq --missing --within aphanius_iberus.clu --out dataset1_rmrep_gatk_nomissing --allow-no-sex --allow-extra-chr --set-missing-var-ids @:#

gzip *.frq.strat

#this needs to be python2
python plink2treemix.py dataset1_rmrep_gatk_nomissing.frq.strat.gz dataset1_rmrep_gatk_nomissing.treemix.frq.gz

conda activate myenvname
