#1 Create bed file 
plink --vcf /home/goliath/DiscoC/aphanius/copy_data/filtered/haplotypecaller/genotypecaller/filtervcf/dataset2_filtered_usnps05.vcf.gz --make-bed --out iberus --allow-extra-chr --double-id

#2 Change bim file (if the first argument is 0, print the whole line)
awk '{$1=0;print $0}' iberus.bim > iberus.bim.tmp
mv iberus.bim.tmp iberus.bim

#3 Create ped
plink --bfile iberus --recode12 --out iberus --allow-extra-chr

#4 Admixture
python admixture-wrapper_edited.py -i /mnt/DiscoC/aphanius/analyses/admixture --kmin 1 --kmax 10 --reps 20 --cv 20 -t 10 
